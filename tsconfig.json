{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "jsx": "react-jsx",
        "module": "commonjs",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": false,
        "target": "es2020",
        "resolveJsonModule": true,
        "esModuleInterop": true ,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ],
        "lib": [
            "es2022",
            "ES2021.String",
            "dom"
        ],
    },
    "exclude": [
        "**/node_modules",
        "**/.*/"
    ],
    "include": [
        "./src/**/**/*"
    ]
}
